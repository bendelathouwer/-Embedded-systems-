 *      er wordt niets opgeslagen in de flas van de esp8266
 *
 */
#include "ESP8266.h"
#include "stm32f7xx_hal.h"
extern UART_HandleTypeDef huart7;

void vActivety ( void )
{
	HAL_GPIO_WritePin(LED_GPIO_Port,LED_Pin,GPIO_PIN_SET);
	HAL_Delay(125);
	HAL_GPIO_WritePin(LED_GPIO_Port,LED_Pin,GPIO_PIN_RESET);
	HAL_Delay(125);

}

void vEnableModule ( void )
{
	HAL_GPIO_WritePin(ENABLE_GPIO_Port,ENABLE_Pin,GPIO_PIN_SET);
}

void vDisableModule ( void )
{
	HAL_GPIO_WritePin(ENABLE_GPIO_Port,ENABLE_Pin,GPIO_PIN_RESET);
}




int iTestStartup ( void  )
{
	uint8_t usComand[5] = "AT\r\n";

	uint8_t usResponse[5]="";
	HAL_UART_Transmit(&huart7,usComand,strlen(usComand),250);
	HAL_UART_Receive(&huart7,usResponse,5,250);

		if((strcmp(usResponse,"OK")==0))
		{
			return (1);
		}
		else
		{
			return (0);
		}

}

